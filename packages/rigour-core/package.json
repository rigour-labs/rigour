        "better-sqlite3": "^11.0.0",
        "openai": "^4.104.0"
    },
    "devDependencies": {
        "@types/better-sqlite3": "^7.6.12",
        "@types/fs-extra": "^11.0.4",
        "@types/micromatch": "^4.0.10",
        "@types/node": "^25.0.3",
        "@types/semver": "^7.7.1"
    }
