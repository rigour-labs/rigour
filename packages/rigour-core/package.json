        "chalk": "^5.6.2",
        "execa": "^8.0.1",
        "fs-extra": "^11.3.3",
        "globby": "^14.1.0",
        "micromatch": "^4.0.8",
        "semver": "^7.7.3",
        "typescript": "^5.9.3",
        "web-tree-sitter": "^0.26.3",
        "yaml": "^2.3.4",
        "zod": "^3.22.4"
