{
    "name": "@rigour-labs/cli",
    "version": "1.0.0",
    "description": "CLI quality gates for AI-generated code. Forces AI agents (Claude, Cursor, Copilot) to meet strict engineering standards with PASS/FAIL enforcement.",
    "license": "MIT",
    "homepage": "https://rigour.run",
    "keywords": [
        "quality-gates",
        "ai-code-quality",
        "cli",
        "linter",
        "static-analysis",
        "claude",
        "cursor",
        "copilot",
        "mcp",
        "code-review",
        "ci-cd"
    ],
    "type": "module",
    "bin": {
        "rigour": "dist/cli.js"
    },
    "files": [
        "dist",
        "studio-dist",
        "templates"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/rigour-labs/rigour"
    },
    "publishConfig": {
        "access": "public",
        "provenance": true
    },
    "scripts": {
        "build": "tsc && pnpm bundle-studio",
        "bundle-studio": "node scripts/bundle-studio.js",
        "test": "vitest run"
    },
    "dependencies": {
        "@rigour-labs/core": "workspace:*",
        "chalk": "^5.3.0",
        "commander": "^12.0.0",
        "cosmiconfig": "^9.0.0",
        "execa": "^8.0.1",
        "fs-extra": "^11.2.0",
        "globby": "^14.0.1",
        "inquirer": "9.2.16",
        "ora": "^8.0.1",
        "yaml": "^2.8.2"
    },
    "devDependencies": {
        "@types/fs-extra": "^11.0.4",
        "@types/inquirer": "9.0.7",
        "@types/node": "^25.0.3"
    }
